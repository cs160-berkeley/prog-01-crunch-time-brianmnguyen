<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.brian.crunch.MainActivity"
    tools:showIn="@layout/activity_main">


    <EditText
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="14"
        android:id="@+id/input"
        android:hint="REPS OR MINS"
        android:textSize="18dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="14"
        android:id="@+id/input2"
        android:hint="LBS"
        android:textSize="18dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/input" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_below="@+id/input"
        android:layout_alignEnd="@+id/input"
        android:layout_alignRight="@+id/input"
        android:entries="@array/excerise_array"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="28dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO"
        android:id="@+id/button2"
        android:layout_below="@+id/input"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="___________"
        android:id="@+id/Calories"
        android:layout_below="@+id/spinner"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="36dp"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALORIES BURNED"
        android:id="@+id/Calories1"
        android:layout_below="@+id/spinner"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="160dp"
        android:textSize="20dp"/>


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="260dp"
        android:id="@+id/scrollView"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button2"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/E1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#70c1e8"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:gravity="center"
                        android:layout_height="fill_parent"
                        android:text="PUSH UP"
                        android:id="@+id/ex1"
                        android:textSize="20dp"
                        />

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/E2"
                android:layout_below="@id/E1"
                android:layout_marginTop="20dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#F93030"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:gravity="center"
                        android:layout_height="fill_parent"
                        android:text="SIT UP"
                        android:id="@+id/ex2"
                        android:textSize="20dp"/>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/E3"
                android:layout_below="@id/E2"
                android:layout_marginTop="20dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#F93082"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:gravity="center"
                        android:layout_height="fill_parent"
                        android:text="SQUATS"
                        android:id="@+id/ex3"
                        android:textSize="20dp"/>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/E4"
                android:layout_below="@id/E3"
                android:layout_marginTop="20dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#F930CA"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:gravity="center"
                        android:layout_height="fill_parent"
                        android:text="LEG LIFT"
                        android:id="@+id/ex4"
                        android:textSize="20dp"/>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/E5"
                android:layout_below="@id/E4"
                android:layout_marginTop="20dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#D230F9"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:gravity="center"
                        android:layout_height="fill_parent"
                        android:text="PLANK"
                        android:id="@+id/ex5"
                        android:textSize="20dp"/>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/E6"
                android:layout_below="@id/E5"
                android:layout_marginTop="20dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#8330F9"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:gravity="center"
                        android:layout_height="fill_parent"
                        android:text="JUMPING JACK"
                        android:id="@+id/ex6"
                        android:textSize="20dp"/>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/E7"
                android:layout_below="@id/E6"
                android:layout_marginTop="20dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#3A30F9"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:gravity="center"
                        android:layout_height="fill_parent"
                        android:text="PULL UP"
                        android:id="@+id/ex7"
                        android:textSize="20dp"/>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/E8"
                android:layout_below="@id/E7"
                android:layout_marginTop="20dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#3069F9"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:gravity="center"
                        android:layout_height="fill_parent"
                        android:text="CYCLING"
                        android:id="@+id/ex8"
                        android:textSize="20dp"/>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/E9"
                android:layout_below="@id/E8"
                android:layout_marginTop="20dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#30B1F9"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:gravity="center"
                        android:layout_height="fill_parent"
                        android:text="WALKING"
                        android:id="@+id/ex9"
                        android:textSize="20dp"/>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/E10"
                android:layout_below="@id/E9"
                android:layout_marginTop="20dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#30F4F9"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:gravity="center"
                        android:layout_height="fill_parent"
                        android:text="JOGGING"
                        android:id="@+id/ex10"
                        android:textSize="20dp"/>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/E11"
                android:layout_below="@id/E10"
                android:layout_marginTop="20dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#30F9BF"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:gravity="center"
                        android:layout_height="fill_parent"
                        android:text="SWIMMING"
                        android:id="@+id/ex11"
                        android:textSize="20dp"/>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/E12"
                android:layout_below="@id/E11"
                android:layout_marginTop="20dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#30F981"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:gravity="center"
                        android:layout_height="fill_parent"
                        android:text="STAIR CLIMBING"
                        android:id="@+id/ex12"
                        android:textSize="20dp"/>

                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>


    </ScrollView>
</RelativeLayout>
